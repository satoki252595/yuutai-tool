# 環境変数設定例

# アプリケーション設定
NODE_ENV=production
PORT=5001

# データベース設定
DB_PATH=./backend/db/yuutai.db

# スクレイピング設定
SCRAPING_INTERVAL=86400000  # 24時間（ミリ秒）
MAX_CONCURRENT_WORKERS=2     # 並行ブラウザ数
REQUEST_DELAY=3000          # リクエスト間隔（ミリ秒）

# APIキー（必要に応じて）
# YAHOO_FINANCE_API_KEY=your_api_key_here

# ドメイン設定（本番環境）
DOMAIN_NAME=yuutai.example.com

# SSL証明書パス（本番環境）
SSL_CERT_PATH=/etc/letsencrypt/live/yuutai.example.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yuutai.example.com/privkey.pem

# ログ設定
LOG_LEVEL=info
LOG_FILE=/var/log/yuutai/app.log